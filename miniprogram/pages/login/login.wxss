.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 40rpx;
  background-color: #FFFFFF;
}

.login-header {
  text-align: center;
  margin: 80rpx 0;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 16rpx;
  display: block;
}

.subtitle {
  font-size: 28rpx;
  color: #8E8E93;
}

.form {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.input-group {
  margin-bottom: 48rpx;
}

.input-item {
  background: #FFFFFF;
  border: 2rpx solid #E5E5EA;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  font-size: 32rpx;
  transition: all 0.3s ease;
}

.input-item:focus {
  border-color: #007AFF;
  transform: translateY(-2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.submit-btn {
  background-color: #007AFF;
  color: #FFFFFF;
  font-size: 32rpx;
  padding: 24rpx;
  border-radius: 12rpx;
  border: none;
  margin-bottom: 32rpx;
  width: 90%;
  height: 88rpx;
  line-height: 88rpx;
  margin: 0 auto 32rpx;
  transition: all 0.2s ease;
}

.submit-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.submit-btn.disabled {
  background-color: #E5E5EA;
  color: #8E8E93;
}

.toggle-mode {
  text-align: center;
  color: #007AFF;
  font-size: 28rpx;
  padding: 20rpx;
  transition: opacity 0.2s ease;
}

.toggle-mode:active {
  opacity: 0.7;
}

.copyright {
  text-align: center;
  color: #8E8E93;
  font-size: 24rpx;
  margin-top: auto;
  padding: 32rpx 0;
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.form {
  animation: fadeIn 0.3s ease-out;
}

/* 错误状态 */
.input-item.error {
  border-color: #FF3B30;
  animation: shake 0.4s ease-in-out;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  25% { transform: translateX(-8rpx); }
  75% { transform: translateX(8rpx); }
}

/* 加载状态 */
.submit-btn.loading {
  opacity: 0.8;
  pointer-events: none;
}

/* 响应式调整 */
@media screen and (min-height: 700px) {
  .login-header {
    margin: 120rpx 0;
  }
} 